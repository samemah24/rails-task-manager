<h1 id= "task-center" label= "Title"><%= @task.title %></h1>
<h2 class="list-center"label="Details"><%= @task.details %></h2>
<h2 class="list-center" label="Completed"><%= @task.completed %></h2>

<h3 class="btn-center"><%=link_to "Go back", tasks_path %></h3>
<h3 class="btn-center"><%=link_to "Edit", edit_task_path %></h3>
<h3 class="btn-center"><%= link_to "Delete Task",
  task_path(@task),
  method: :delete,
  data: { confirm: "Are you sure ?"}%></h3>
